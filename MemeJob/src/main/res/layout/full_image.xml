<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:layout_margin="20dp"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Job Title"
        android:id="@+id/job_description"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@string/hello_world"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout
        android:id="@+id/main_area"
        android:layout_width="fill_parent"
        android:layout_below="@+id/job_description"
        android:layout_height="match_parent"
        android:layout_above="@+id/apply_button_bar">

        <ImageView android:id="@+id/full_image_view"
        android:layout_width="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_height="fill_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/long_description"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:textSize="16dp"
            android:padding="15dp"
            android:textColor="#ffffff"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:id="@+id/apply_button_bar">
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Job Details"
        android:textOff="Job Details"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="bold"
        android:id="@+id/btn_job_details"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Apply Now"
        android:textColor="#ffffff"
        android:id="@+id/button2"
        android:textSize="16dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    </RelativeLayout>



</RelativeLayout>